<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>To Do List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
  <link rel="stylesheet" href="css/styles.css">
</head>

<body class="text-center">

  <main class="container m-auto">

    <div class="box" id="heading">
      <h1> <%= listTitle %> To-Do List: </h1>
    </div>

    <div class="box">
      <% newListItems.forEach(function(item){ %>
        <form class="" action="/delete" method="post">
          <div class="addItem">
            <button class="removeButton" type="submit" name="removeButton" value="<%= item._id %>">Ã—</button>
            <p> <%= item.name %> </p>
          </div>
          <input type="hidden" name="listName" value="<%= listTitle %>">
        </form>
      <% }) %>

      <form class="addItem" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button class="addButton" type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
    </div>

  </main>

</body>

<footer>
  <p>&copy; 2022, Rakib Uddin</p>
</footer>

</html>
